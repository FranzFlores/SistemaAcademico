<%-include('../header')%>


    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <h4 class="center-align title-form">Facultades</h4>
                <div class="card-content">
                    <%- locals.flash %>
                    <form action="/faculty/create" method="POST" id="facultyForm">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="name" type="text" name="name" required class="validate name">
                                <label for="name">Nombre Facultad</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="description" class="materialize-textarea description" name="description"></textarea>
                                <label for="description">Descripción de la Facultad</label>
                            </div>
                        </div>
                        <div class="card-action">
                            <div class="input-field col-s12 center-align">
                                <button class="btn" id="button" data-id="">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Nombre Facultad</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% faculties.forEach(function(faculty){ %>
                    <tr>
                        <td><%=faculty.name%></td>
                        <td><%=faculty.description%></td>
                        <td> 
                            <a id="edit" class="edit" data-id="<%=faculty._id%>">
                               <i class="material-icons btn">edit</i>
                            </a>
                            <a id="delete" class="delete" data-id="<%=faculty._id%>">
                                <i class="material-icons btn">delete</i>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<%-include('../footer')%>
<script src="/js/views/faculty.js"></script>