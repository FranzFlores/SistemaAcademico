<%-include('../header')%>

<div class="container">
    <div class="card" style="margin-top:40px;">
        <h3 class="center-align title-form">Registro de Docentes</h3>
        <%- locals.flash %>
        <div class="card-content">
            <div class="row">
                <form class="col s12" action="/person/signup" method="POST">
                    <input type="hidden" name="role" value="teacher">
                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="Ingrese Número de Cédula" id="dni" type="text" name="dni_person"
                                class="validate">
                            <label for="dni">Cédula</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="Ingrese Nombres y Apellidos" id="name" type="text" name="name"
                                class="validate">
                            <label for="name">Nombres y Apellidos</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" class="datepicker" name="birthday">
                            <label for="name">Fecha de Nacimiento</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="institutional_mail" placeholder="Ingrese su Correo Institucional" type="email"
                                name="institutional_mail" class="validate">
                            <label for="email">Correo Institucional</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="personal_mail" type="email" placeholder="Ingrese su Correo Personal"
                                name="personal_mail" class="validate">
                            <label for="email">Correo Personal</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="address" type="text" name="address" placeholder="Ingrese su dirección"
                                class="validate">
                            <label for="address">Dirección</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="phone" type="text" name="phone" placeholder="Ingrese su telefono"
                                class="validate">
                            <label for="phone">Teléfono</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <select name="career" id="careers"></select>
                            <label for="career">Carrera</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="university_degree" type="text" name="university_degree"
                                placeholder="Ingrese su Título Universitario" class="validate">
                            <label for="university_degree">Título Universitario</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="fourth_level_degree" type="text" name="fourth_level_degree"
                                placeholder="Ingrese su Título Cuarto Nivel" class="validate">
                            <label for="university_degree">Título Cuarto Nivel</label>
                        </div>
                    </div>
                    <div class="card-action">
                        <div class="input-field col-s12 center-align">
                            <button class="btn">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<table class="highlight centered responsive-table">
    <thead>
        <tr style="color: #2ec56f;">
            <th>Cédula</th>
            <th>Nombres y Apellidos</th>
            <th>Carrera</th>
            <th>Título Universitario</th>
            <th>Especialidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <%teachers.forEach(function(teacher){ %>
        <tr>
            <td><%=teacher.person.dni_person%></td>
            <td><%=teacher.person.name%></td>
            <td><%=teacher.person.career.name%></td>
            <td><%=teacher.university_degree%></td>
            <td><%=teacher.fourth_level_degree%></td>
            <td>
                <a id="edit" class="edit" data-id="<%=teacher._id%>">
                    <i class="material-icons btn">edit</i>
                </a>
                <a id="delete" class="delete" data-id="<%=teacher._id%>">
                    <i class="material-icons btn">delete</i>
                </a>
            </td>
        </tr>
        <%})%>



    </tbody>
</table>

<%-include('../footer')%>
<script src="/js/views/person.js"></script>