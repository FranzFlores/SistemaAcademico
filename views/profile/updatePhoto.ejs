<%-include('../header')%>
<div class="card">
    <h3 class="center-align title-form">Actualización de la Foto de Perfil</h3>
    <div class="card-content">
        <div class="row">
            <form class="col s12" action="/person/upload-image/<%=user.idPerson%>" method="POST"  enctype="multipart/form-data" >
                <div class="row">
                    <div class="input-field col s12">
                        <input id="personal_mail" type="file" name="image" class="validate" required>
                    </div>
                </div>
                <div class="card-action">
                    <div class="input-field col-s12 center-align">
                        <button class="btn">Actualizar Información</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<%-include('../footer')%>